<% layout("layouts/boilerplate") %>

<div class="row mt-3">
  <h1 class="col-6 offset-3 mb-3">Login</h1>
  <div class="col-6 offset-3">
    <form action="/login" method="post" class="needs-validation">
      <div class="form-group">
        <label for="username" class="form-label">Username</label>
        <input name="username" id="username" type="text" class="form-control mb-3" required/>
        <div class="valid-feedback">Good!</div>
      </div>
      <div class="form-group">
        <label for="password" class="form-label">Password</label>
        <input name="password" id="password" type="password" class="form-control mb-3" required/>
        <div class="valid-feedback">Good!</div>
      </div>
      <button class="btn btn-info mt-3 mb-3">Login</button>
    </form>
  </div>
</div>
